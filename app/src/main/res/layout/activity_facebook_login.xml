<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apps.rahul.puzzlealarm.FacebookLoginActivity">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_marginBottom="30dip"
        />



    <Button
        android:layout_width="wrap_content"
        android:text="Get Pictures"
        android:id="@+id/getData"
        android:layout_marginTop="100dip"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="200dip"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:id="@+id/facebookPicture"
        android:background="@drawable/border_imageview"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dip"
        android:text="Launch Puzzle"
        android:id="@+id/startPuzzleActivityButton"
        />


    <Button
        android:id="@+id/setAlarm"
        android:text="Start Alarm"
        android:layout_marginTop="480dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
