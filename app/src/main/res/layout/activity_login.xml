<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apps.rahul.puzzlealarm.LoginActivity">

    <Button
        android:layout_marginTop="50dip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Start OneDrive Login"
        android:id="@+id/oneDriveLogin"
        />

    <Button
        android:layout_marginTop="150dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getDriveButton"
        android:text="Get Root Drive"
        />

    <Button
        android:text="Get Picture"
        android:layout_marginTop="220dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getPictures"
        />

    <ImageView
        android:background="@drawable/border_imageview"
        android:id="@+id/oneDriveImage"
        android:layout_marginTop="300dip"
        android:layout_width="500dip"
        android:layout_height="500dip" />

</RelativeLayout>
